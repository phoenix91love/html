
@model Dictionary<string, List<Nqs.Models.FormModel.Home.ExchangeRateModel>>
@{
    Layout = "~/Views/Shared/_IFrameLayout.cshtml";
}
<div class="l-sidebar d-inline-grid">
    <!--Lãi xuất-->
    <div class="c-box c-thongke is-border is-primary is-minus-mobile c-update">
        <div class="c-box__content">
            <ul class="is-line-bottom">
                <li class="active">
                    <b style="color: #3b1b70;">Lãi suất</b>
                </li>

            </ul>
            <ul class="contentinfo" data-tab="tigia" style="display: block; max-height: 300px; overflow-y: auto">

                <li class="label1">
                    <span style="width: 32%; display: inline-block;"><b>Ngân hàng</b></span>
                    <span style="width: 20%; display: inline-block; text-align: right;"><b>1 tháng</b></span>
                    <span style="width: 20%; display: inline-block; text-align: right;"><b>6 tháng</b></span>
                    <span style="width: 20%; display: inline-block; text-align: right;"><b>12 tháng</b></span>
                </li>
                @{
                    foreach (var item in Model["LAIXUAT"])
                    {
                        <li title="@item.Name">
                            <span style="width: 32%; display: inline-block;">@item.Name</span>
                            <span style="width: 20%; display: inline-block; text-align: right;">@item.Value.ToString("N2")</span>
                            <span style="width: 20%; display: inline-block; text-align: right;">@item.PerChange.ToString("N2")</span>
                            <span style="width: 20%; display: inline-block; text-align: right;">@item.Change.ToString("N2")</span>
                        </li>
                    }
                }

                <li class="source">
                    <span class="float-left"></span>
                    <span class="float-right"></span>
                </li>
            </ul>


        </div>
    </div>


    <div class="c-box c-thongke is-border is-primary is-minus-mobile c-update">
        <div class="c-box__content">
            <ul class="is-line-bottom tab-tigia">
                <li class="active">
                    <a href="javascript:void(0)" class="infolinks btn-tab-tigia active" data-tab="tigia" data-toggle="tab">TỈ GIÁ</a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="infolinks btn-tab-tigia" data-tab="giavang" data-toggle="tab">GIÁ VÀNG</a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="infolinks btn-tab-hanghoacoin" data-tab="hanghoa" data-toggle="tab">HÀNG HÓA</a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="infolinks btn-tab-hanghoacoin" data-tab="coin" data-toggle="tab">COIN</a>
                </li>
            </ul>
            <ul class="contentinfo ul-tigia" data-tab="tigia" style="display: block;">
                <li class="label1"><span class="code">Mã</span><span class="price">Giá bán</span><span class="change">Thay đổi</span></li>
                @{
                    foreach (var item in Model["MoneyExchange"])
                    {
                        <li title="@item.Name" class="@(item.Status > 0 ? "green" : (item.Status < 0 ? "red" : ""))"><span class="code">@item.Code</span><span class="price">@item.Value.ToString("N0")</span><span class="text-center change price-change ">@(item.Change > 0 ? "+" + item.Change : (item.Change < 0 ? "" + item.Change : ""))@(item.Change > 0 ? "(+" + item.PerChange+")" : (item.Change < 0 ? "(" + item.PerChange + "%)" : "")) </span></li>
                    }
                }

                <li class="source">
                    <span class="float-left">Nguồn Eximbank</span>
                    <span class="float-right"></span>
                </li>
            </ul>
            <ul class="contentinfo ul-tigia" data-tab="giavang" style="display: none;">
                <li class="label1"><span class="code">Mã</span><span class="price">Giá mua</span><span class="change">Giá bán</span></li>
                @{
                    foreach (var item in Model["GoldExchange"])
                    {
                        <li title="@item.Name">
                            <span class="code">@item.Code</span>
                            <span class="price text-right">@item.Change.ToString("N0")</span>
                            <span class="change text-right">@item.Value.ToString("N0")</span>
                        </li>
                    }
                }

                <li class="source">
                    <span class="float-left">Nguồn Eximbank</span>
                    <span class="float-right"></span>
                </li>
            </ul>

            <ul class="contentinfo ul-hanghoacoin" data-tab="hanghoa" style="display: none;">
                <li class="label1"><span class="code">Mã</span><span class="price">Giá bán</span><span class="change">Thay đổi</span></li>
                @{
                    foreach (var item in Model["HHExchange"])
                    {
                        <li title="@item.Name" class="@(item.Status > 0 ? "green" : (item.Status < 0 ? "red" : ""))">
                            <span class="code">
                                @item.Name
                            </span>
                            <span class="price">@item.Value.ToString("N2")</span>
                            <span class="text-center change price-change ">@(item.Change > 0 ? "+" + item.Change : (item.Change < 0 ? "" + item.Change : ""))@(item.Change > 0 ? "(+" + item.PerChange + ")" : (item.Change < 0 ? "(" + item.PerChange + "%)" : "")) </span>
                        </li>
                    }
                }

                <li class="source">
                    <span class="float-left"></span>
                    <span class="float-right"></span>
                </li>
            </ul>
            <ul class="contentinfo ul-hanghoacoin" data-tab="coin" style="display: none;">
                <li class="label1"><span class="code">Mã</span><span class="price">Giá bán</span><span class="change">Thay đổi</span></li>
                @{
                    foreach (var item in Model["CoinExchange"])
                    {
                        <li title="@item.Name" class="@(item.Status > 0 ? "green" : (item.Status < 0 ? "red" : ""))"><span class="code">@item.Name</span><span class="price">@item.Value.ToString("N2")</span><span class="text-center change price-change ">@(item.Change.ToString("N2") + "("+ @item.PerChange.ToString("N2") + "%)")</span></li>

                    }
                }

                <li class="source">
                    <span class="float-left"></span>
                    <span class="float-right"></span>
                </li>
            </ul>
        </div>
    </div>
    <div class="c-box is-border is-primary is-minus-mobile c-update">
        <div class="c-box__title">
            <div class="c-box__title__name">THÔNG TIN CÔNG BỐ</div>
        </div>
        <div class="c-box__content white__bg">
            <div class="c-news-new">
                <ul>

                    @foreach (var item in Model["TTCB"])
                    {
                        <li>
                            <h4>
                                <a href="@Url.Action("CompanyDetail", "Company", new { code=item.Code, newsId=item.Id })" data-id="@item.Id">
                                    <span class="label1">@item.Code</span>
                                    <span>@item.Title</span>
                                </a>
                            </h4>
                        </li>

                    }
                </ul>
            </div>
            <!--end c-news-new-->
        </div>
        <!--end c-box__content-->
    </div>
</div>


