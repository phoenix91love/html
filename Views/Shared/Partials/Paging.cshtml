
<ul class="pagination ">
    @{
        if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" data-page="@(Model.CurrentPage-1)" href="@(!string.IsNullOrEmpty(Model.Url) && Model.Url != "#" ? Model.Url+"?page="+(Model.CurrentPage-1) : "javascript:void(0)")">Trước</a>
            </li>
        }
        for (int i = Model.FromPage; i <= Model.ToPage; i++)
        {
            var url = Model.Url;
            if (!string.IsNullOrEmpty(url) && url != "javascript:void(0)")
            {
                url += "?page=" + i;
            }
            if (i == Model.CurrentPage)
            {
                <li class="page-item"><a class="page-link active" href="javascript:void(0)">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" data-page="@i" href="@url">@i</a></li>
            }

        }
        if (Model.CurrentPage < Model.TotalPage)
        {
            <li class="page-item">
                <a class="page-link" data-page="@(Model.CurrentPage+1)" href="@(!string.IsNullOrEmpty(Model.Url) && Model.Url != "#" ? Model.Url+"?page="+(Model.CurrentPage+1) : "javascript:void(0)")">Sau</a>
            </li>
        }
    }
</ul>