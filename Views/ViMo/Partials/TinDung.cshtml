
<div class="col-lg-12">
    <form id="tindung-form">
        @if (!ViewBag.IsMobile)
        {
            <div class="col-lg-2 col-sm-12 col-12 mb-2" style="display: none">
                <div class="form-group">
                    <label for="lbl-tindung-from-quy">Xem theo</label>
                    <select class="form-control" id="lbl-tindung-view-by" name="type">
                        <option value="0">Tháng</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-2 col-sm-12 col-12 mb-2 gdp-group-quy">
                <div class="form-group">
                    <label for="ddl-tindung-from-quy">Từ tháng</label>
                    <select class="form-control" id="ddl-tindung-from-quy" name="fromThang">
                        @foreach (var item in M.Common.Helpers.DateTimeHelper.GetMonths())
                        {
                            <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text</option>
                        }
                    </select>
                </div>

            </div>
            <div class="col-lg-2 col-sm-12 col-12 mb-2">
                <div class="form-group">
                    <label for="ddl-tindung-from-nam" class="lbl-tindung-from-nam">Năm</label>
                    <select class="form-control" id="ddl-tindung-from-nam" name="fromYear">
                        @foreach (var item in M.Common.Helpers.DateTimeHelper.GetYears(DateTime.Now.AddYears(-1).Year))
                        {
                            <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-lg-2 col-sm-12 col-12 mb-2 tindung-group-quy">
                <div class="form-group">
                    <label for="ddl-tindung-to-quy">Đến Tháng</label>
                    <select class="form-control" id="ddl-tindung-to-quy" name="toThang">
                        @foreach (var item in M.Common.Helpers.DateTimeHelper.GetMonths(DateTime.Now.Month))
                        {
                            <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-lg-2 col-sm-12 col-12 mb-2">
                <div class="form-group">
                    <label for="ddl-tindung-to-nam" class="lbl-tindung-to-nam">Năm</label>
                    <select class="form-control" id="ddl-tindung-to-nam" name="toYear">
                        @foreach (var item in M.Common.Helpers.DateTimeHelper.GetYears())
                        {
                            <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text</option>
                        }



                    </select>
                </div>

            </div>


            <div class="col-lg-1 col-sm-12 col-12 mb-2">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <button type="button" class="btn btn-blue btn-search-tindung">Xem</button>
                </div>
            </div>
        }
        else
        {
            <div class="form-group row">
                <label for="lbl-tindung-from-quy" class="col-form-label col-3">Xem theo</label>
                <div class="col-4">
                    <select class="form-control" id="lbl-tindung-view-by" name="type">
                        <option value="0">Tháng</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="ddl-tindung-from-quy" class="col-form-label col-3">Từ tháng</label>
                <div class="col-4">
                    <select class="form-control" id="ddl-tindung-from-quy" name="fromThang">
                        @foreach (var item in M.Common.Helpers.DateTimeHelper.GetMonths())
                        {
                            <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text</option>
                        }
                    </select>
                </div>
                <label for="ddl-tindung-from-nam" class="col-form-label col-1">Năm</label>
                <div class="col-4">
                    <select class="form-control" id="ddl-tindung-from-nam" name="fromYear">
                        @foreach (var item in M.Common.Helpers.DateTimeHelper.GetYears(DateTime.Now.AddYears(-1).Year))
                        {
                            <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="ddl-tindung-to-quy" class="col-form-label col-3">Đến Tháng</label>
                <div class="col-4">
                    <select class="form-control" id="ddl-tindung-to-quy" name="toThang">
                        @foreach (var item in M.Common.Helpers.DateTimeHelper.GetMonths(DateTime.Now.Month))
                        {
                            <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text</option>
                        }
                    </select>
                </div>
                <label for="ddl-tindung-to-nam" class="col-form-label col-1">Năm</label>
                <div class="col-4">
                    <select class="form-control" id="ddl-tindung-to-nam" name="toYear">
                        @foreach (var item in M.Common.Helpers.DateTimeHelper.GetYears())
                        {
                            <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text</option>
                        }

                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 mb-2">
                    <button type="button" class="btn btn-blue btn-search-tindung">Xem</button>
                </div>
            </div>
        }

    </form>
</div>
