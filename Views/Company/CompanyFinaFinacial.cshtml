    var lableReportCDKT = new string[] { Model.CDKTChart.SearchParams["y1"].ToString(), Model.CDKTChart.SearchParams["y2"].ToString(), Model.CDKTChart.SearchParams["y3"].ToString(), Model.CDKTChart.SearchParams["y4"].ToString() };

