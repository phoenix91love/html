        dataReportCDKT1 = new double[] { Math.Round(data1.ValueYear1.Value / unit, 2), Math.Round(data1.ValueYear2.Value / unit, 2), Math.Round(data1.ValueYear3.Value / unit, 2), Math.Round(data1.ValueYear4.Value / unit, 2) };
